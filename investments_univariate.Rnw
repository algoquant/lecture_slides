      <<echo=TRUE,eval=FALSE>>=
# Simulate stop-loss strategy
sto_p <- 0.05
ma_x <- 0.0
mi_n <- 0.0
cum_ret <- 0.0
pnl_s <- vt_i
for (i in 1:(n_rows-1)) {
# Calculate drawdown
  cum_ret <- cum_ret + vt_i[i]
  ma_x <- max(ma_x, cum_ret)
