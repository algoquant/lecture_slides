# R startup chunk
# ```{r setup, include=FALSE}
library(shiny)
library(quantmod)
interval <- 31
closep  <- quantmod::Cl(rutils::etfenv$VTI)
plot_theme <- chart_theme()
plot_theme$col$line.col <- c("orange", "blue")
# ```
