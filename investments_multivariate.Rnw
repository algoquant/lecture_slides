dygraphs::dygraph(wealthv[endd], 
  main="Wealth of Fixed Share and Equal Dollar Portfolios") %>%
  dyOptions(colors=c("blue", "red"), strokeWidth=2) %>%
  dyLegend(show="always", width=300)
